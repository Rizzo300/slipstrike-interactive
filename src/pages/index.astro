<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Slipstrike Interactive</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&family=Roboto&display=swap" rel="stylesheet">
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        background: linear-gradient(to bottom, #0c0f15, #1a1e28);
        color: #e0e0e0;
        font-family: 'Roboto', sans-serif;
        text-align: center;
        padding: 60px 20px;
        overflow-x: hidden;
      }
      h1 {
        font-size: 3.2em;
        color: #00bfff;
        margin-bottom: 20px;
        font-family: 'Orbitron', sans-serif;
        animation: fadeInDown 1s ease-out;
      }
      p {
        font-size: 1.2em;
        max-width: 700px;
        margin: 10px auto;
        line-height: 1.6;
        animation: fadeIn 2s ease;
      }
      .highlight {
        color: #ffcc00;
        font-weight: bold;
      }
      .contact {
        margin-top: 60px;
        background: #121721;
        padding: 40px 30px;
        border-radius: 12px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 0 25px #00bfff33;
        animation: fadeInUp 1.5s ease;
      }
      .contact h2 {
        color: #00bfff;
        margin-bottom: 20px;
        font-family: 'Orbitron', sans-serif;
      }
      .roles {
        text-align: left;
        max-width: 450px;
        margin: 0 auto 20px;
        font-size: 1.1em;
        line-height: 1.5;
      }
      form {
        text-align: left;
        max-width: 450px;
        margin: 30px auto 0;
      }
      input, textarea {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: none;
        border-radius: 6px;
        background-color: #1f242d;
        color: #fff;
        font-size: 1em;
      }
      button {
        padding: 12px 25px;
        background-color: #00bfff;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s ease;
      }
      button:hover {
        background-color: #008ecf;
      }
      footer {
        margin-top: 80px;
        font-size: 0.9em;
        color: #666;
        animation: fadeIn 3s ease;
      }
      @keyframes fadeIn {
        0% {opacity: 0; transform: translateY(10px);}
        100% {opacity: 1; transform: translateY(0);}
      }
      @keyframes fadeInDown {
        0% {opacity: 0; transform: translateY(-20px);}
        100% {opacity: 1; transform: translateY(0);}
      }
      @keyframes fadeInUp {
        0% {opacity: 0; transform: translateY(20px);}
        100% {opacity: 1; transform: translateY(0);}
      }
    </style>
  </head>
